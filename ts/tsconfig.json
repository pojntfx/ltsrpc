{
  "include": ["**/*.ts"],
  "compilerOptions": {
    "types": ["bun-types", "reflect-metadata"],
    "target": "es2017",
    "module": "es2022",
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "outDir": "dist",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Bundler"
  }
}
